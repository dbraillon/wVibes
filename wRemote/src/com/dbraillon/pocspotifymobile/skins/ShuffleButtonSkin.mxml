<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.dbraillon.pocspotifymobile.constants.ColorsConstant;
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<!-- SkinParts
	name=iconDisplay, type=spark.primitives.BitmapImage, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
	
	<!-- border and fill -->
	<s:Rect id="rect" radiusX="0" radiusY="0" top="0" right="0" 
			bottom="0" left="0" height="32" width="32"
			verticalCenter="0" horizontalCenter="0">
		<s:fill>
			<s:SolidColor color="{ColorsConstant.darkGrey}" color.down="{ColorsConstant.mediumGrey}"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="{ColorsConstant.darkGrey}" weight="0" />
		</s:stroke>
	</s:Rect>
	
	<!-- image -->
	<s:Image source="assets/32x32/shuffle.png"
			 width="16" height="16"
			 left="16" right="16" top="16" bottom="16"/>
	
</s:Skin>
