<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<!-- border and fill -->
	<s:Rect id="rect" radiusX="0" radiusY="0" top="0" right="0" 
			bottom="0" left="0" height="32" width="32"
			verticalCenter="0" horizontalCenter="0">
		<s:fill>
			<s:SolidColor color="0x050505" color.down="0x555555"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0x050505" weight="0" />
		</s:stroke>
	</s:Rect>
	
	<!-- image -->
	<s:Image source="assets/64x64/play.png"
			 width="32" height="32"
			 left="8" right="8" top="8" bottom="8"/>
	
</s:Skin>
