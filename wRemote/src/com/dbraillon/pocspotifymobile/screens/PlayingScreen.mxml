<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="Now Playing">
	
	<s:VGroup height="100%" width="100%">
		<s:Image id="titleImage"
				 height="50%" width="100%"
				 horizontalAlign="center"
				 source="assets/David-Guetta-She-Wolf.jpg"/>
		
		<s:VGroup height="10%" width="100%" horizontalAlign="center">
			<s:Label id="titleName"
					 height="50%" width="100%"
					 text="She Wolf (Falling into pieces)"/>
			<s:Label id="titleArtist"
					 height="50%" width="100%"
					 text="David Ghetta ft. Sia"/>	
		</s:VGroup>
		
		<s:HGroup height="15%" width="100%"
				  horizontalAlign="center">
			<s:Button id="shuffleButton"
					  height="100%" width="19%"
					  icon=""
					  skinClass="spark.skins.mobile.ViewMenuItemSkin"/>
			<s:Button id="previousButton"
					  height="100%" width="19%"
					  icon="assets/previous_blue_icon.png"
					  skinClass="spark.skins.mobile.ViewMenuItemSkin"/>
			<s:Button id="playPauseButton"
					  height="100%" width="24%"
					  icon="assets/play_blue_icon.png"
					  skinClass="spark.skins.mobile.ViewMenuItemSkin"/>
			<s:Button id="nextButton"
					  height="100%" width="19%"
					  icon="assets/next_blue_icon.png"
					  skinClass="spark.skins.mobile.ViewMenuItemSkin"/>
			<s:Button id="repeatButton"
					  height="100%" width="19%"
					  icon=""
					  skinClass="spark.skins.mobile.ViewMenuItemSkin"/>	
		</s:HGroup>
	</s:VGroup>
	
	
	
</s:View>
