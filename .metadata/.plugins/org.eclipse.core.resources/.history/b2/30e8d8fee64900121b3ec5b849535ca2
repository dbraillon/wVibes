package com.dbraillon.pocspotifymobile
{
	public class Log
	{
		public static var ERROR_LEVEL	:int;
		public static var WARNING_LEVEL	:int;
		public static var INFO_LEVEL	:int;
		public static var LEVEL_1		:int;
		public static var LEVEL_2		:int;
		public static var LEVEL_3		:int;
		
		public static function write(level:int, context:String, message:String):void
		{
			var localDate:Date = new Date();
			
			trace("- " + localDate.time + " [" + level + "](" + context + "): " + message);
		}
	}
}